@model AuctionApplication.Models.CategoryModel


<h4>Change rating of @Html.DisplayFor(model => model.Name)</h4>
<hr />

<div class="row" style="margin-top:30px">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group" type="hidden">
                <input type="hidden" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                Change rating: <select id="Rating" name="Rating">
                    <option value="-3">Very low</option>
                    <option value="-2">Low</option>
                    <option value="-1">Slightly low</option>
                    <option selected="selected" value="0">Medium</option>
                    <option value="1">Slightly high</option>
                    <option value="2">High</option>
                    <option value="3">Very high</option>
                </select>
            </div>
            <div class="form-group" style="margin-top:10px">
                <input type="submit" value="Submit change" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div class="row" style="margin-top:30px">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Go back to the categories view" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
