@model IEnumerable<AuctionApplication.Models.OfferModel>


<h4>List of offers for auction @Html.DisplayFor(model => model.First().AuctionId)</h4>
<hr />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                Person Id
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Person)
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="row" style="margin-top:30px">
    <div class="col-md-4">
        <form asp-action="Auction">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Go back to the auction view" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
