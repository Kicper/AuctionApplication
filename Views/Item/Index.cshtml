@model IEnumerable<AuctionApplication.Models.ItemModel>


<h4>List of items</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Search for an item" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div class="row" style="margin-top:10px">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Reset searching" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<form asp-controller="Item" asp-action="Index">
    <table class="table" style="margin-top:20px">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rating)
                </th>
                <th>
                    Change rating
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RatingText)
                    </td>
                    <td>
                        @Html.ActionLink("Edit rating", "EditRating", routeValues: new { @itemId = item.Id, @itemName = item.Name, @itemCategory = item.CategoryId, @itemRating = item.Rating }, htmlAttributes: new { })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>

<div class="row" style="margin-top:30px">
    <div class="col-md-4">
        <form asp-action="Category">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Go back to the category view" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>