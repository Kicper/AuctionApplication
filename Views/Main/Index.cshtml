@model AuctionApplication.Models.UserModel


<h4>Main view</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Category">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Rate categories and items" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div class="row" style="margin-top:10px">
    <div class="col-md-4">
        <form asp-action="Auction">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Show available auctions" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div class="row" style="margin-top:10px">
    <div class="col-md-4">
        <form asp-action="Algorithm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Get best auction preferetion" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div class="row" style="margin-top:80px">
    <div class="col-md-4">
        <form asp-action="Home">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Logout" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
